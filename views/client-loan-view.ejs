<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="/css/sidebar.css">
  </head>
  <body>
    <header>
      <%- include('partials/header'); %>
    </header>
    <main class="container-fluid d-flex flex-nowrap">
      <aside class="border">
        <%- include('partials/client/sidebar'); %>
      </aside>
      <!-- Content -->
      <div class="flex-grow-1 p-3">
        <!-- Transaction Table -->
        <div class="table-responsive mt-4">
          <% if (transactions && transactions.length > 0) { %>
          <table class="table table-striped table-sm align-middle">
            <thead>
              <tr>
                <th>Date</th>
                <th>Deposit</th>
                <th>Withdrawal</th>
                <th>TransferID</th>
                <th>Description</th>
                <th class="text-center">Approved</th>
              </tr>
            </thead>
            <tbody>
              <% for (const transaction of transactions) { %>
              <tr>
                <td><%= transaction.Date %></td>
                <td><%= transaction.TransactionTypeID === 1 ? transaction.Amount : '' %></td>
                <td><%= transaction.TransactionTypeID === 2 ? '-' + transaction.Amount : '' %></td>
                <td><%= transaction.TransferID %></td>
                <td><%= transaction.Description %></td>
                <td class="text-center">
                  <img src="/images/<%= transaction.StatusID === 2 ? 'success' : 'failure' %>.png" 
                       alt="<%= transaction.StatusID === 2 ? 'Transaction approved' : 'Transaction is waiting for approval' %>"
                       width="16" height="16">
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
          <% } %>
          <hr>
          <!-- Summary Table -->
          <table class="table table-hover w-auto ms-auto">
            <tbody>              
              <tr>
                <th scope="row">Principal Amount:</th>
                <td>- <%= account.PrincipalAmount %></td>
              </tr>
              <% if (typeof balance !== 'undefined' && balance !== null) { %>
                <tr>
                  <th scope="row">Current Balance:</th>
                  <td>- <%= (account.PrincipalAmount - balance).toFixed(2) %></td>
                </tr>
                <% } %>              
            </tbody>
          </table>
        </div>
      </div>
    </main>
    <footer>
      <%- include('partials/footer'); %>
    </footer>
    <script src="/js/feather.min.js"></script>
    <script>feather.replace()</script>
  </body>
</html>