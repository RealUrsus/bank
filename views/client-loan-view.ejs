<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="/css/client-common.css">
  </head>
  <body>
    <header>
      <%- include('partials/header'); %>
    </header>
    <main class="container-fluid d-flex flex-nowrap">
      <aside class="border">
        <%- include('partials/client/sidebar'); %>
      </aside>
      <!-- Content -->
      <div class="flex-grow-1 p-3">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="mb-0">Loan #<%= account.AccountID %></h3>
          <a href="/client/loan/view" class="btn btn-outline-secondary btn-sm">
            <i data-feather="arrow-left" style="width: 16px; height: 16px;"></i> Back to Loans
          </a>
        </div>

        <%
          // Calculate loan details
          const principal = parseFloat(account.PrincipalAmount);
          const interestRate = parseFloat(account.InterestRate);
          const term = parseFloat(account.Term);
          const interestAmount = (principal * interestRate * (term / 12)) / 100;
          const totalAtMaturity = principal + interestAmount;
          const currentBalance = typeof balance !== 'undefined' && balance !== null ? balance : 0;

          // Calculate paid off amount (principal + interest accrued to current day)
          const startDate = new Date(account.StartDate);
          const today = new Date();
          const daysElapsed = Math.max(0, Math.floor((today - startDate) / (1000 * 60 * 60 * 24)));
          const monthsElapsed = daysElapsed / 30.44; // Average days per month
          const accruedInterest = (principal * interestRate * (monthsElapsed / 12)) / 100;
          const paidOffAmount = principal + accruedInterest;
        %>

        <!-- Loan Details Card -->
        <div class="card mb-4">
          <div class="card-header bg-light">
            <h5 class="mb-0">Loan Details</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                  <div>
                    <small class="text-muted d-block">Principal Loan Amount</small>
                    <h4 class="mb-0">$<%= principal.toFixed(2) %></h4>
                  </div>
                  <i data-feather="dollar-sign" class="text-primary" style="width: 32px; height: 32px;"></i>
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                  <div>
                    <small class="text-muted d-block">Amount at Maturity</small>
                    <h4 class="mb-0">$<%= totalAtMaturity.toFixed(2) %></h4>
                  </div>
                  <i data-feather="trending-up" class="text-success" style="width: 32px; height: 32px;"></i>
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                  <div>
                    <small class="text-muted d-block">Current Balance</small>
                    <h4 class="mb-0">$<%= currentBalance.toFixed(2) %></h4>
                  </div>
                  <i data-feather="credit-card" class="text-info" style="width: 32px; height: 32px;"></i>
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                  <div>
                    <small class="text-muted d-block">Paid off Amount</small>
                    <h4 class="mb-0 text-primary">$<%= paidOffAmount.toFixed(2) %></h4>
                  </div>
                  <i data-feather="dollar-sign" class="text-primary" style="width: 32px; height: 32px;"></i>
                </div>
              </div>
            </div>

            <!-- Note about paid off amount -->
            <div class="alert alert-info mb-3">
              <i data-feather="info" style="width: 16px; height: 16px;"></i>
              <strong>Note:</strong> Paid off Amount is Principal Loan Amount + interest accrued to current day. This amount must be transferred from checking to assign status paid off and close loan.
            </div>

            <hr>

            <div class="row">
              <div class="col-md-4">
                <small class="text-muted d-block">Interest Rate</small>
                <strong><%= interestRate %>%</strong>
              </div>
              <div class="col-md-4">
                <small class="text-muted d-block">Term</small>
                <strong><%= term %> months</strong>
              </div>
              <div class="col-md-4">
                <small class="text-muted d-block">Maturity Calculation</small>
                <strong>$<%= principal.toFixed(2) %> + $<%= interestAmount.toFixed(2) %> interest</strong>
              </div>
            </div>
          </div>
        </div>

        <!-- Transactions Section -->
        <div class="card">
          <div class="card-header bg-light">
            <h5 class="mb-0">Transactions</h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <% if (transactions && transactions.length > 0) { %>
              <table class="table table-hover align-middle">
                <thead class="table-light">
                  <tr>
                    <th>Date</th>
                    <th>Deposit</th>
                    <th>Withdrawal</th>
                    <th>TransferID</th>
                    <th>Description</th>
                    <th class="text-center">Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (const transaction of transactions) { %>
                  <tr>
                    <td><%= transaction.Date %></td>
                    <td class="text-success"><%= transaction.TransactionTypeID === 1 ? '$' + transaction.Amount : '' %></td>
                    <td class="text-danger"><%= transaction.TransactionTypeID === 2 ? '-$' + transaction.Amount : '' %></td>
                    <td><%= transaction.TransferID %></td>
                    <td><%= transaction.Description %></td>
                    <td class="text-center">
                      <% if (transaction.StatusID === 2) { %>
                        <span class="badge bg-success">
                          <i data-feather="check" style="width: 12px; height: 12px;"></i> Approved
                        </span>
                      <% } else { %>
                        <span class="badge bg-warning">
                          <i data-feather="clock" style="width: 12px; height: 12px;"></i> Pending
                        </span>
                      <% } %>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
              <% } else { %>
              <!-- Empty State -->
              <div class="text-center py-5">
                <i data-feather="file-text" style="width: 64px; height: 64px;" class="text-muted mb-3"></i>
                <h4 class="text-muted">No Transactions Found</h4>
                <p class="text-muted">There are no transactions for this loan yet.</p>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </main>
    <footer>
      <%- include('partials/footer'); %>
    </footer>
    <script src="/js/feather.min.js"></script>
    <script>feather.replace()</script>
  </body>
</html>