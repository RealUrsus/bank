<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="/css/sidebar.css">
  </head>
  <body>
    <header>
      <%- include('partials/header'); %>
    </header>
    <main class="container-fluid d-flex flex-nowrap">
      <aside class="border">
        <%- include('partials/client/sidebar'); %>
      </aside>
      <!-- Content -->
      <div class="flex-grow-1 p-3">
        <section>
          <div class="btn-toolbar mb-3">
            <!-- Enter Transaction Button -->
            <button type="button" class="btn btn-sm btn-outline-secondary me-2" data-bs-toggle="modal" data-bs-target="#enter-transaction">
              <i data-feather="edit" class="me-1"></i> Enter Transaction
            </button>
            <!-- Dropdown for Transactions Period -->
            <div class="dropdown">
              <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                <i data-feather="calendar" class="me-1"></i> Transactions Period
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <li><a class="dropdown-item" href="/client/transactions/7">Last 7 Days</a></li>
                <li><a class="dropdown-item" href="/client/transactions/30">Last 30 Days</a></li>
                <li><a class="dropdown-item" href="/client/transactions/90">Last 90 Days</a></li>
                <li><a class="dropdown-item" href="/client/transactions/120">Last 120 Days</a></li>
              </ul>
            </div>
          </div>
        </section>
        <!-- Modals -->
        <modals>
          <%- include('partials/client/add-transaction-form'); %>
        </modals>
        <!-- Transaction Table -->
        <div class="table-responsive mt-4">
          <% if (transactions && transactions.length > 0) { %>
          <table class="table table-striped table-sm align-middle">
            <thead>
              <tr>
                <th>Date</th>
                <th>Deposit</th>
                <th>Withdrawal</th>
                <th>TransferID</th>
                <th>Description</th>
                <th class="text-center">Approved</th>
              </tr>
            </thead>
            <tbody>
              <% for (const transaction of transactions) { %>
              <tr>
                <td><%= transaction.Date %></td>
                <td><%= transaction.TransactionTypeID === 1 ? transaction.Amount : '' %></td>
                <td><%= transaction.TransactionTypeID === 2 ? '-' + transaction.Amount : '' %></td>
                <td><%= transaction.TransferID %></td>
                <td><%= transaction.Description %></td>
                <td class="text-center">
                  <img src="/images/<%= transaction.StatusID === 2 ? 'success' : 'failure' %>.png" 
                       alt="<%= transaction.StatusID === 2 ? 'Transaction approved' : 'Transaction is waiting for approval' %>"
                       width="16" height="16">
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
          <% } %>
          <hr>
          <!-- Summary Table -->
          <table class="table table-hover w-auto ms-auto">
            <tbody>
              <% if (typeof balance !== 'undefined' && balance !== null) { %>
              <tr>
                <th scope="row">Total Amount:</th>
                <td><%= balance.toFixed(2) %></td>
              </tr>
              <% } %>
              <% if (typeof approved_balance !== 'undefined' && approved_balance !== null && approved_balance !== balance) { %>
              <tr>
                <th scope="row">Total Approved Amount:</th>
                <td><%= approved_balance.toFixed(2) %></td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
    <footer>
      <%- include('partials/footer'); %>
    </footer>
    <script src="/js/feather.min.js"></script>
    <script>feather.replace()</script>
  </body>
</html>