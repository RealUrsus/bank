<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="/css/client-common.css">
  </head>
  <body>
    <header>
      <%- include('partials/header'); %>
    </header>
    <main class="container-fluid d-flex flex-nowrap">
      <aside class="border">
        <%- include('partials/admin/sidebar'); %>
      </aside>
      <!-- Content -->
      <div class="flex-grow-1 p-3">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="mb-0">Client Loans</h3>
        </div>

        <!-- Client Selection -->
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title mb-3">
              <i data-feather="user" style="width: 20px; height: 20px;"></i>
              Select Client
            </h5>
            <form method="GET" action="/admin/loans/view">
              <div class="row g-3 align-items-end">
                <div class="col-md-6">
                  <label for="clientId" class="form-label">Client</label>
                  <select class="form-select" id="clientId" name="clientId" required>
                    <option value="">-- Select a Client --</option>
                    <% options.forEach(option => { %>
                      <option value="<%= option.UserID %>" <%= option.UserID == clientId ? 'selected' : '' %>>
                        <%= option.Name %> <%= option.Surname %> (#<%= option.UserID %>)
                      </option>
                    <% }) %>
                  </select>
                </div>
                <div class="col-md-3">
                  <button type="submit" class="btn btn-primary w-100">
                    <i data-feather="search" style="width: 16px; height: 16px;"></i>
                    Load Client Loans
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>

        <% if (clientId) { %>
          <% const selectedClient = options.find(c => c.UserID == clientId); %>
          <% if (selectedClient) { %>
          <!-- Selected Client Info -->
          <div class="alert alert-info mb-4">
            <strong>Viewing loans for:</strong> <%= selectedClient.Name %> <%= selectedClient.Surname %> (ID: #<%= selectedClient.UserID %>)
          </div>
          <% } %>

          <!-- Loans Table -->
          <% if (loans && loans.length > 0) { %>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title mb-3">
                <i data-feather="list" style="width: 20px; height: 20px;"></i>
                Loan Accounts
              </h5>
              <div class="table-responsive">
                <table class="table table-hover align-middle">
                  <thead class="table-light">
                    <tr>
                      <th>Loan ID</th>
                      <th>Start Date</th>
                      <th>Principal Amount</th>
                      <th>Interest Rate</th>
                      <th>Term</th>
                      <th>Status</th>
                      <th>Description</th>
                      <th class="text-center">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% loans.forEach(loan => { %>
                    <tr>
                      <td><strong>#<%= loan.AccountID %></strong></td>
                      <td><%= loan.StartDate %></td>
                      <td class="fw-bold">$<%= loan.PrincipalAmount.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
                      <td><%= loan.InterestRate %>%</td>
                      <td><%= loan.Term %> months</td>
                      <td><span class="badge bg-<%= loan.StatusName === 'Active' ? 'success' : loan.StatusName === 'Pending' ? 'warning' : loan.StatusName === 'Closed' || loan.StatusName === 'Paid Off' ? 'secondary' : 'danger' %>"><%= loan.StatusName %></span></td>
                      <td><%= loan.Description %></td>
                      <td class="text-center">
                        <div class="btn-group" role="group">
                          <a href="/admin/loans/edit/<%= loan.AccountID %>" class="btn btn-secondary btn-sm">
                            <i data-feather="edit" style="width: 14px; height: 14px;"></i>
                            Edit
                          </a>
                          <form action="/admin/loans/delete" method="POST" class="d-inline">
                            <input type="hidden" name="id" value="<%= loan.AccountID %>">
                            <input type="hidden" name="clientId" value="<%= clientId %>">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this loan?')">
                              <i data-feather="trash-2" style="width: 14px; height: 14px;"></i>
                              Delete
                            </button>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                          </form>
                        </div>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <% } else { %>
          <!-- Empty State -->
          <div class="card">
            <div class="card-body">
              <div class="text-center py-5">
                <i data-feather="inbox" style="width: 64px; height: 64px;" class="text-muted mb-3"></i>
                <h4 class="text-muted">No Loans Found</h4>
                <p class="text-muted">This client does not have any loans.</p>
                <a href="/admin/loans/add" class="btn btn-primary">
                  <i data-feather="plus-circle" style="width: 16px; height: 16px;"></i>
                  Create New Loan
                </a>
              </div>
            </div>
          </div>
          <% } %>
        <% } else { %>
        <!-- No Client Selected -->
        <div class="text-center py-5">
          <i data-feather="user-check" style="width: 64px; height: 64px;" class="text-muted mb-3"></i>
          <h4 class="text-muted">Select a Client</h4>
          <p class="text-muted">Please select a client from the dropdown above to view their loans.</p>
        </div>
        <% } %>
      </div>
    </main>
    <footer>
      <%- include('partials/footer'); %>
    </footer>
    <!-- Icons -->
    <script src="/js/feather.min.js"></script>
    <script>feather.replace()</script>
  </body>
</html>
