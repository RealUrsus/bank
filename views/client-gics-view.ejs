<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="/css/sidebar.css">
  </head>
  <body>
    <header>
      <%- include('partials/header'); %>
    </header>
    <main class="container-fluid d-flex flex-nowrap">
      <aside class="border">
        <%- include('partials/client/sidebar'); %>
      </aside>
      <!-- Content -->
      <div class="flex-grow-1 p-3">
        <h2 class="mb-3">My GIC Investments</h2>
        <!-- GICs Table -->
        <div class="table-responsive mt-4">
          <% if (gics && gics.length > 0) { %>
          <table class="table table-striped table-sm align-middle">
            <thead>
              <tr>
                <th>#</th>
                <th>Product Name</th>
                <th>Principal Amount</th>
                <th>Rate</th>
                <th>Term</th>
                <th>Start Date</th>
                <th>Current Balance</th>
              </tr>
            </thead>
            <tbody>
              <% for (const gic of gics) { %>
              <tr>
                <td><a href="/client/gic/view/<%= gic.AccountID %>"><%= gic.AccountID %></a></td>
                <td><%= gic.ProductName || 'N/A' %></td>
                <td>$<%= parseFloat(gic.PrincipalAmount).toFixed(2) %></td>
                <td><%= gic.InterestRate %>%</td>
                <td><%= gic.Term %> months</td>
                <td><%= gic.StartDate %></td>
                <td>$<%= parseFloat(gic.Balance).toFixed(2) %></td>
              </tr>
              <% } %>
            </tbody>
          </table>
          <% } else { %>
          <p class="text-muted">You don't have any GIC investments yet.</p>
          <% } %>
        </div>
      </div>
    </main>
    <footer>
      <%- include('partials/footer'); %>
    </footer>
    <script src="/js/feather.min.js"></script>
    <script>feather.replace()</script>
  </body>
</html>
