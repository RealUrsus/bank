<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="/css/client-common.css">
  </head>
  <body>
    <header>
      <%- include('partials/header'); %>
    </header>
    <main class="container-fluid d-flex flex-nowrap">
      <aside class="border">
        <%- include('partials/client/sidebar'); %>
      </aside>
      <!-- Content -->
      <div class="flex-grow-1 p-3">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="mb-0">GIC Investment #<%= account.AccountID %></h3>
          <a href="/client/gic/view" class="btn btn-outline-secondary btn-sm">
            <i data-feather="arrow-left" style="width: 16px; height: 16px;"></i> Back to GICs
          </a>
        </div>

        <%
          // Calculate GIC details
          const principal = parseFloat(account.PrincipalAmount);
          const interestRate = parseFloat(account.InterestRate);
          const term = parseFloat(account.Term);
          const interestAmount = (principal * interestRate * (term / 12)) / 100;
          const balanceAtMaturity = principal + interestAmount;
          const startDate = account.StartDate;

          // Calculate end date
          const startDateObj = new Date(startDate);
          const endDateObj = new Date(startDateObj);
          endDateObj.setMonth(endDateObj.getMonth() + term);
          const endDate = endDateObj.toISOString().split('T')[0];
        %>

        <!-- GIC Details Card -->
        <div class="card mb-4">
          <div class="card-header bg-light">
            <h5 class="mb-0">GIC Investment Details</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                  <div>
                    <small class="text-muted d-block">Principal Amount</small>
                    <h4 class="mb-0">$<%= principal.toFixed(2) %></h4>
                  </div>
                  <i data-feather="dollar-sign" class="text-primary" style="width: 32px; height: 32px;"></i>
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                  <div>
                    <small class="text-muted d-block">Balance at Maturity</small>
                    <h4 class="mb-0">$<%= balanceAtMaturity.toFixed(2) %></h4>
                  </div>
                  <i data-feather="trending-up" class="text-success" style="width: 32px; height: 32px;"></i>
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                  <div>
                    <small class="text-muted d-block">Annual Interest Rate</small>
                    <h4 class="mb-0"><%= interestRate.toFixed(2) %>%</h4>
                  </div>
                  <i data-feather="percent" class="text-warning" style="width: 32px; height: 32px;"></i>
                </div>
              </div>
              <div class="col-md-6 mb-3">
                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                  <div>
                    <small class="text-muted d-block">Term</small>
                    <h4 class="mb-0"><%= term %> months</h4>
                  </div>
                  <i data-feather="calendar" class="text-info" style="width: 32px; height: 32px;"></i>
                </div>
              </div>
            </div>

            <hr>

            <div class="row">
              <div class="col-md-4">
                <small class="text-muted d-block">Start Date</small>
                <strong><%= startDate %></strong>
              </div>
              <div class="col-md-4">
                <small class="text-muted d-block">End Date</small>
                <strong><%= endDate %></strong>
              </div>
              <div class="col-md-4">
                <small class="text-muted d-block">Maturity Calculation</small>
                <strong>$<%= principal.toFixed(2) %> + $<%= interestAmount.toFixed(2) %> interest</strong>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <footer>
      <%- include('partials/footer'); %>
    </footer>
    <script src="/js/feather.min.js"></script>
    <script>feather.replace()</script>
  </body>
</html>
