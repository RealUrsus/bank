<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="/css/sidebar.css">
  </head>
  <body>
    <header>
      <%- include('partials/header'); %>
    </header>
    <main class="container-fluid d-flex flex-nowrap">
      <aside class="border">
        <% if (userRole === 'client') { %>
          <%- include('partials/client/sidebar'); %>
        <% } else { %>
          <%- include('partials/admin/sidebar'); %>
        <% } %>
      </aside>
      <!-- Content -->
      <div class="flex-grow-1 p-3">
        <section>
          <h2>Change Password</h2>
          <hr>

          <% if (message) { %>
            <div class="alert <%= message.includes('successfully') ? 'alert-success' : 'alert-danger' %> alert-dismissible fade show" role="alert">
              <%= message %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>

          <div class="row">
            <div class="col-md-6">
              <form action="/<%= userRole %>/change-password" method="post">
                <div class="mb-3">
                  <label for="currentPassword" class="form-label">Current Password</label>
                  <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
                </div>

                <div class="mb-3">
                  <label for="newPassword" class="form-label">New Password</label>
                  <input type="password" class="form-control" id="newPassword" name="newPassword" minlength="8" required>
                  <div class="form-text">Password must be at least 8 characters long.</div>
                </div>

                <div class="mb-3">
                  <label for="confirmPassword" class="form-label">Confirm New Password</label>
                  <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" minlength="8" required>
                </div>

                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <button type="submit" class="btn btn-primary">Change Password</button>
                <a href="/<%= userRole %>" class="btn btn-secondary">Cancel</a>
              </form>
            </div>
            <div class="col-md-6">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Password Requirements</h5>
                  <ul class="list-unstyled">
                    <li><i data-feather="check-circle" class="text-success"></i> At least 8 characters long</li>
                    <li><i data-feather="check-circle" class="text-success"></i> Must match in both fields</li>
                  </ul>
                  <hr>
                  <h6>Security Tips</h6>
                  <ul class="small">
                    <li>Use a unique password for this account</li>
                    <li>Consider using a password manager</li>
                    <li>Don't share your password with anyone</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </main>
    <footer>
      <%- include('partials/footer'); %>
    </footer>
    <script>
      // Client-side password matching validation
      document.querySelector('form').addEventListener('submit', function(e) {
        const newPassword = document.getElementById('newPassword').value;
        const confirmPassword = document.getElementById('confirmPassword').value;

        if (newPassword !== confirmPassword) {
          e.preventDefault();
          alert('New passwords do not match!');
          return false;
        }
      });
    </script>
  </body>
</html>
