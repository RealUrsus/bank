<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="/css/sidebar.css">
  </head>
  <body>
    <header>
      <%- include('partials/header'); %>
    </header>
    <main class="container-fluid d-flex flex-nowrap">
      <aside class="border">
        <%- include('partials/admin/sidebar'); %>
      </aside>
      <!-- Content -->
      <div class="flex-grow-1 p-5">
        <form action="/admin/transactions" method="POST" class="d-flex align-items-center gap-3 mb-4">
          <label for="databaseSelect" class="form-label mb-0">
            <h5 class="mb-0">Transactions list for the client:</h5>
          </label>
          <select id="databaseSelect" name="clientId" class="form-select w-auto" required>
            <% if (!clientId) { %>
            <option value="" disabled selected>Select a customer...</option>
            <% } %>
            <% options.forEach(option => { %>
            <option value="<%= option.UserID %>" <% if (option.UserID == clientId) { %> selected <% } %> >
              <%= option.Name %> <%= option.Surname %>
            </option>
            <% }) %>
          </select>
          <button type="submit" class="btn btn-primary btn-sm">Submit</button>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>
        

        <div class="table-responsive">
          <% if (transactions && transactions.length > 0) { %>
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>TID</th>
                <th style="width: 120px;">Date</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Description</th>
                <th style="width: 140px; text-align: center;">Action</th>
              </tr>
            </thead>
            <tbody>
              <% transactions.forEach(transaction => { %>
              <tr>
                <td><%= transaction.TransactionID %></td>
                <td><%= transaction.Date %></td>
                <td><%= transaction.TransactionTypeID === 2? '-' + transaction.Amount : transaction.Amount %></td>
                <td>
                  <% if (transaction.Category) { %>
                    <span class="badge bg-secondary"><%= transaction.Category %></span>
                  <% } else { %>
                    <span class="text-muted fst-italic">â€”</span>
                  <% } %>
                </td>
                <td><%= transaction.Description %></td>
                <td class="text-center">
                  <div class="btn-group" role="group">
                    <form action="/admin/transactions/update" method="POST" class="d-inline">
                      <input type="hidden" name="id" value="<%= transaction.TransactionID %>">
                      <input type="hidden" name="clientId" value="<%= clientId %>">
                      <button type="submit" class="btn btn-primary btn-sm">Approve</button>
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </form>
                    <form action="/admin/transactions/delete" method="POST" class="d-inline">
                      <input type="hidden" name="id" value="<%= transaction.TransactionID %>">
                      <input type="hidden" name="clientId" value="<%= clientId %>">
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </form>
                  </div>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <% } %>
        </div>
      </div>
    </main>
    <footer>
      <%- include('partials/footer'); %>
    </footer>
    <!-- Icons -->
    <script src="/js/feather.min.js"></script>
    <script>feather.replace()</script>
  </body>
</html>
