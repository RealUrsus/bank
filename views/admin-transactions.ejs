<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="/css/client-common.css">
  </head>
  <body>
    <header>
      <%- include('partials/header'); %>
    </header>
    <main class="container-fluid d-flex flex-nowrap">
      <aside class="border">
        <%- include('partials/admin/sidebar'); %>
      </aside>
      <!-- Content -->
      <div class="flex-grow-1 p-3">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="mb-0">Pending Transactions</h3>
        </div>

        <!-- Client Selection -->
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title mb-3">
              <i data-feather="user" style="width: 20px; height: 20px;"></i>
              Select Client
            </h5>
            <form method="GET" action="/admin/transactions">
              <div class="row g-3 align-items-end">
                <div class="col-md-6">
                  <label for="clientId" class="form-label">Client</label>
                  <select class="form-select" id="clientId" name="clientId" required>
                    <option value="">-- Select a Client --</option>
                    <% options.forEach(option => { %>
                      <option value="<%= option.UserID %>" <%= option.UserID == clientId ? 'selected' : '' %>>
                        <%= option.Name %> <%= option.Surname %> (#<%= option.UserID %>)
                      </option>
                    <% }) %>
                  </select>
                </div>
                <div class="col-md-3">
                  <button type="submit" class="btn btn-primary w-100">
                    <i data-feather="search" style="width: 16px; height: 16px;"></i>
                    Load Transactions
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>

        <% if (clientId) { %>
          <% const selectedClient = options.find(c => c.UserID == clientId); %>
          <% if (selectedClient) { %>
          <!-- Selected Client Info -->
          <div class="alert alert-info mb-4">
            <strong>Viewing pending transactions for:</strong> <%= selectedClient.Name %> <%= selectedClient.Surname %> (ID: #<%= selectedClient.UserID %>)
          </div>
          <% } %>

          <!-- Transactions Table -->
          <% if (transactions && transactions.length > 0) { %>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title mb-3">
                <i data-feather="list" style="width: 20px; height: 20px;"></i>
                Pending Transactions
              </h5>
              <div class="table-responsive">
                <table class="table table-hover align-middle">
                  <thead class="table-light">
                    <tr>
                      <th>Transaction ID</th>
                      <th>Date</th>
                      <th>Type</th>
                      <th>Amount</th>
                      <th>Category</th>
                      <th>Description</th>
                      <th class="text-center">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% transactions.forEach(transaction => {
                      const isDeposit = transaction.TransactionTypeID === 1;
                      const isWithdrawal = transaction.TransactionTypeID === 2;
                    %>
                    <tr>
                      <td><strong>#<%= transaction.TransactionID %></strong></td>
                      <td><%= transaction.Date %></td>
                      <td>
                        <span class="badge <%= isDeposit ? 'bg-success' : (isWithdrawal ? 'bg-danger' : 'bg-info') %>">
                          <% if (isDeposit) { %>
                            <i data-feather="arrow-down-circle" style="width: 14px; height: 14px;"></i> Deposit
                          <% } else if (isWithdrawal) { %>
                            <i data-feather="arrow-up-circle" style="width: 14px; height: 14px;"></i> Withdrawal
                          <% } else { %>
                            <i data-feather="repeat" style="width: 14px; height: 14px;"></i> Transfer
                          <% } %>
                        </span>
                      </td>
                      <td class="fw-bold <%= isDeposit ? 'text-success' : (isWithdrawal ? 'text-danger' : '') %>">
                        <%= isWithdrawal ? '-' : '' %>$<%= transaction.Amount.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                      </td>
                      <td>
                        <% if (transaction.Category) { %>
                          <span class="badge bg-secondary"><%= transaction.Category %></span>
                        <% } else { %>
                          <span class="text-muted fst-italic">—</span>
                        <% } %>
                      </td>
                      <td><%= transaction.Description || '—' %></td>
                      <td class="text-center">
                        <div class="btn-group" role="group">
                          <form action="/admin/transactions/update" method="POST" class="d-inline">
                            <input type="hidden" name="id" value="<%= transaction.TransactionID %>">
                            <input type="hidden" name="clientId" value="<%= clientId %>">
                            <button type="submit" class="btn btn-success btn-sm">
                              <i data-feather="check" style="width: 14px; height: 14px;"></i>
                              Approve
                            </button>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                          </form>
                          <form action="/admin/transactions/delete" method="POST" class="d-inline">
                            <input type="hidden" name="id" value="<%= transaction.TransactionID %>">
                            <input type="hidden" name="clientId" value="<%= clientId %>">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this transaction?')">
                              <i data-feather="trash-2" style="width: 14px; height: 14px;"></i>
                              Delete
                            </button>
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                          </form>
                        </div>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <% } else { %>
          <!-- Empty State -->
          <div class="card">
            <div class="card-body">
              <div class="text-center py-5">
                <i data-feather="check-circle" style="width: 64px; height: 64px;" class="text-muted mb-3"></i>
                <h4 class="text-muted">No Pending Transactions</h4>
                <p class="text-muted">This client has no pending transactions to approve.</p>
              </div>
            </div>
          </div>
          <% } %>
        <% } else { %>
        <!-- No Client Selected -->
        <div class="text-center py-5">
          <i data-feather="user-check" style="width: 64px; height: 64px;" class="text-muted mb-3"></i>
          <h4 class="text-muted">Select a Client</h4>
          <p class="text-muted">Please select a client from the dropdown above to view their pending transactions.</p>
        </div>
        <% } %>
      </div>
    </main>
    <footer>
      <%- include('partials/footer'); %>
    </footer>
    <!-- Icons -->
    <script src="/js/feather.min.js"></script>
    <script>feather.replace()</script>
  </body>
</html>
