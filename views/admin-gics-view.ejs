<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="/css/sidebar.css">
  </head>
  <body>
    <header>
      <%- include('partials/header'); %>
    </header>
    <main class="container-fluid d-flex flex-nowrap">
      <aside class="border">
        <%- include('partials/admin/sidebar'); %>
      </aside>
      <!-- Content -->
      <div class="flex-grow-1 p-5">
        <form action="/admin/gics/view" method="POST" class="d-flex align-items-center gap-3 mb-4">
          <label for="clientSelect" class="form-label mb-0">
            <h5 class="mb-0">GIC Investments for the client:</h5>
          </label>
          <select id="clientSelect" name="clientId" class="form-select w-auto" required>
            <% if (!clientId) { %>
            <option value="" disabled selected>Select a customer...</option>
            <% } %>
            <% options.forEach(option => { %>
            <option value="<%= option.UserID %>" <% if (option.UserID == clientId) { %> selected <% } %> >
              <%= option.Name %> <%= option.Surname %>
            </option>
            <% }) %>
          </select>
          <button type="submit" class="btn btn-primary btn-sm">Submit</button>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        </form>

        <div class="table-responsive">
          <% if (gics && gics.length > 0) { %>
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>GIC ID</th>
                <th style="width: 120px;">Start Date</th>
                <th>Principal Amount</th>
                <th>Interest Rate</th>
                <th>Term</th>
                <th>Current Balance</th>
                <th style="width: 100px; text-align: center;">Action</th>
              </tr>
            </thead>
            <tbody>
              <% gics.forEach(gic => { %>
              <tr>
                <td><%= gic.AccountID %></td>
                <td><%= gic.StartDate %></td>
                <td>$<%= parseFloat(gic.PrincipalAmount).toFixed(2) %></td>
                <td><%= gic.InterestRate %>%</td>
                <td><%= gic.Term %> months</td>
                <td>$<%= parseFloat(gic.Balance).toFixed(2) %></td>
                <td class="text-center">
                  <div class="btn-group" role="group">
                    <a href="/admin/gics/edit/<%= gic.AccountID %>" class="btn btn-secondary btn-sm">Edit</a>
                    <form action="/admin/gics/delete" method="POST" class="d-inline">
                      <input type="hidden" name="id" value="<%= gic.AccountID %>">
                      <input type="hidden" name="clientId" value="<%= clientId %>">
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </form>
                  </div>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <% } %>
        </div>
      </div>
    </main>
    <footer>
      <%- include('partials/footer'); %>
    </footer>
    <!-- Icons -->
    <script src="/js/feather.min.js"></script>
    <script>feather.replace()</script>
  </body>
</html>
