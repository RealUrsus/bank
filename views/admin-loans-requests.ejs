<!doctype html>
<html lang="en">
  <head>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="/css/sidebar.css">
  </head>
  <body>
    <header>
      <%- include('partials/header'); %>
    </header>
    <main class="container-fluid d-flex flex-nowrap">
      <aside class="border">
        <%- include('partials/admin/sidebar'); %>
      </aside>
      <!-- Content -->
      <div class="flex-grow-1 p-5">
        <h2 class="mb-4">Pending Loan Requests</h2>

        <div class="table-responsive">
          <% if (pendingLoans && pendingLoans.length > 0) { %>
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>Request ID</th>
                <th>Client Name</th>
                <th style="width: 120px;">Request Date</th>
                <th>Principal Amount</th>
                <th>Interest Rate</th>
                <th>Term</th>
                <th>Payment Frequency</th>
                <th>Description</th>
                <th>Status</th>
                <th style="width: 180px; text-align: center;">Action</th>
              </tr>
            </thead>
            <tbody>
              <% pendingLoans.forEach(loan => { %>
              <tr>
                <td><%= loan.AccountID %></td>
                <td><%= loan.Name %> <%= loan.Surname %></td>
                <td><%= loan.StartDate %></td>
                <td>$<%= Number(loan.PrincipalAmount).toFixed(2) %></td>
                <td><%= loan.InterestRate %>%</td>
                <td><%= loan.Term %> months</td>
                <td><%= loan.PaymentFrequencyName || 'N/A' %></td>
                <td><%= loan.Description %></td>
                <td><span class="badge bg-warning text-dark"><%= loan.StatusName %></span></td>
                <td class="text-center">
                  <div class="btn-group" role="group">
                    <form action="/admin/loans/approve" method="POST" class="d-inline">
                      <input type="hidden" name="loanId" value="<%= loan.AccountID %>">
                      <button type="submit" class="btn btn-success btn-sm">Approve</button>
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </form>
                    <form action="/admin/loans/deny" method="POST" class="d-inline">
                      <input type="hidden" name="loanId" value="<%= loan.AccountID %>">
                      <button type="submit" class="btn btn-danger btn-sm">Deny</button>
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </form>
                  </div>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <% } else { %>
          <div class="alert alert-info" role="alert">
            <h5 class="alert-heading">No pending loan requests</h5>
            <p>There are currently no loan requests waiting for approval.</p>
          </div>
          <% } %>
        </div>
      </div>
    </main>
    <footer>
      <%- include('partials/footer'); %>
    </footer>
    <!-- Icons -->
    <script src="/js/feather.min.js"></script>
    <script>feather.replace()</script>
  </body>
</html>
